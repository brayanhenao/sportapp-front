{
  "name": "@sportapp/mobile",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "EXPO_USE_METRO_WORKSPACE_ROOT=1 expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "EXPO_USE_METRO_WORKSPACE_ROOT=1 expo start --web",
    "lint": "yarn lint:ts",
    "lint:ts": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "test": "jest --ci --reporters=default --config jest.config.ts --no-cache --coverage --forceExit --detectOpenHandles --logHeapUsage",
    "package": "cd android && ./gradlew assembleRelease",
    "pre-commit": "lint-staged",
    "prebuild": "expo prebuild -p android --clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,js}\""
  },
  "dependencies": {
    "@sportapp/langs": "*",
    "@sportapp/stores": "*",
    "expo": "~50.0.14",
    "expo-constants": "~15.4.5",
    "expo-dev-client": "~3.3.11",
    "expo-linking": "~6.2.2",
    "expo-location": "~16.5.5",
    "expo-router": "~3.4.8",
    "expo-secure-store": "^12.8.1",
    "expo-sensors": "~12.9.1",
    "expo-status-bar": "~1.11.1",
    "expo-task-manager": "~11.7.2",
    "i18next": "^23.10.1",
    "react": "18.2.0",
    "react-i18next": "^14.1.0",
    "react-native": "0.73.6",
    "react-native-chart-kit": "^6.12.0",
    "react-native-paper": "^5.12.3",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "^15.1.0",
    "react-native-vector-icons": "^10.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.73.21",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.5",
    "@react-native/typescript-config": "0.73.1",
    "@sportapp/eslint-config": "*",
    "@sportapp/prettier-config": "*",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "jest-expo": "^50.0.4",
    "lint-staged": "^15.2.2",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.1.2",
    "ts-jest-mock-import-meta": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
